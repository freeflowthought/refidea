generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  useremail String @unique @db.VarChar(512)
  password  String @db.VarChar(256)

  Post        Post[]
  Profile     Profile?
  Application Application[]
  Offer       Offer[]

  @@map("users")
}

model Post {
  id          Int      @id @default(autoincrement())
  postTitle   String
  description String
  salary      Int?
  bonus       Int?
  category    Category @default(BACKEND)
  createDate  DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])

  Application Application[]
  offer       Offer[]
  MakeOffer   MakeOffer[]

  @@map("posts")
}

model Application {
  id         Int      @id @default(autoincrement())
  interest   String
  createDate DateTime @default(now())
  postId     Int
  post       Post     @relation(fields: [postId], references: [id])
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
  status     Status   @default(NA)

  @@map("applications")
}

//profile is the information goes with user, introduction etc.
model Profile {
  id           Int    @id @default(autoincrement())
  introduction String
  userId       Int    @unique
  user         User   @relation(fields: [userId], references: [id])

  @@map("profiles")
}

model Offer {
  id         Int         @id @default(autoincrement())
  //this is from post to other users.
  userId     Int
  user       User        @relation(fields: [userId], references: [id])
  createDate DateTime    @default(now())
  pStatus    Pstatus     @default(NA)
  Post       Post[]
  MakeOffer  MakeOffer[]

  @@map("offers")
}

//do I need to create a many-to-many relationship for this?
model MakeOffer {
  id      Int    @id @default(autoincrement())
  post    Post?  @relation(fields: [postId], references: [id])
  offer   Offer? @relation(fields: [offerId], references: [id])
  postId  Int
  offerId Int
}

enum Category {
  FRONTEND
  BACKEND
  FULLSTACK
  DATA
  BUSINESS
}

enum Status {
  NA
  REJECTED
  PENDING
  APPROVAL
}

enum Pstatus {
  NA
  REJECTED
  APPROVAL
}
